<h1>Wallet recharge</h1>

<div class="mt-4">
  <%= form_tag charges_path do %>
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
      <label class="amount">
        <h3><span>Amount: Rs.1000</span></h3>
      </label>
    </article>

    <div class="mt-4">
      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= Rails.application.credentials.stripe[:STRIPE_TEST_PUBLISHABLE_KEY] %>"
              data-description="Wallet recharge"
              data-amount="1000"
              data-locale="auto">
      </script>
    </div>
  <% end %>
</div>