<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Director:</strong>
  <%= @movie.director %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @movie.rating %>
</p>

<p>
  <strong>Actor:</strong>
  <%= @movie.actor %>
</p>

<p>
  <strong>Actress:</strong>
  <%= @movie.actress %>
</p>

<p>
<table>
  <thead>
    <tr>
      <th colspan="2">Theater</th>
      <th colspan="2">Location</th>
      <th colspan="3">Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @theaters.each do |theater| %>
      <tr>
        <td colspan="2"><%= link_to theater.name, theater %></td>
        <td colspan="2"><%= theater.location %></td>
        <td colspan="3"><%= theater.price %></td>
        <td><%= link_to 'Book ticket', theater %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</p>
<p>
  <% if current_user.admin? %>
    <%= link_to 'Edit', edit_movie_path(@movie) %> |
  <% end %>
  <%= link_to 'Back', movies_path %>
</P>